<%- include('./partials/header'); -%>
<div class="container" style="margin-top:50px;">
    <div class="row">
        <div class="container text-left col-md-8" style=" box-shadow: 1px 3px 15px #d7d7d7; padding:50px;  background: whitesmoke; padding:30px;">
            <h5 class="text-center"> Create Blog</h5>
            <form id="blogSubmit" autocomplete="off" action="/createBlog" method="POST" style="width: 100%;"  > 
                <label style="padding-top:5px; ">Username:</label> 
                <input class="form-control" type = "text" name="username" value="<%= currentUser.username %>" style="width: 100%;" required readonly>  
                <label style="padding-top:5px; ">Created</label> 
                <input  id="created" class="form-control" type="text" placeholder="<%= new Date().toLocaleString()%>" name="created" style="width: 100%;" required readonly> 
                <label style="padding-top:5px; ">Title</label> 
                <input  id="title" class="form-control" type="text" placeholder="Title" name="title" style="width: 100%;" required> 
                <div class="form-group">
                    <label style="padding-top:5px; ">Category</label> 
                    <select id="category" name="category" class="custom-select" id="sel1">
                        <option>Marketing</option>
                        <option>Sales</option>
                        <option>Service</option>
                        <option>Support</option>
                        <option>Program Management</option>
                        <option>Data Management</option>
                        <option>Technology</option>
                      </select></div>
                
                <label style="padding-top:5px; ">Image</label> 
                <input id="image" class="form-control" type="text" placeholder="image URL" name="image" style="width: 100%;" required> 
                <label style="padding-top:5px; ">Description</label> 
                <textarea id="description" class="form-control" type="text" placeholder="Description" name="description" style="width: 100%;" required> </textarea>
                
                <label style="padding-top:5px; ">Body HTML</label> 
                <textarea id="blogHTML" class="form-control" type="text" placeholder="Body HTML" name="html" style="width: 100%;" required> </textarea>
                
    
                <button class="btn btn-success" style="display:block;margin-top:20px; width:100%;">Submit</button>
            </form>
    
        </div>
        <div class="card home-card col-md-4 inline" id="card">
            <div class="card-wraper">
              <img id="cardImage" src="https://zen-marketing-content.s3.amazonaws.com/content/blog/1_NewZendeskHeaders/2017%20customer%20strends.png" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 id="cardTitle" class="card-title">Card title</h5>
                <a href="#"><p id="cardCategory">Category</p></a>
                <p id="cardDescription" class="card-text">This card has supporting text below as a natural lead-in to additional content.</p>
                <p id="cardCreated" class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                <input name="" id="" class="btn btn-danger" type="button" value="More >">
              </div>
            </div>
          </div>
    </div>
   

    <div id="previewContainer" class="my-5 container">

        <nav class="navbar navbar-light bg-light">
          
            <span class="navbar-brand h1">Preview</span>
    
            <svg class="bi bi-gear-fill " width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M9.405 1.05c-.413-1.4-2.397-1.4-2.81 0l-.1.34a1.464 1.464 0 0 1-2.105.872l-.31-.17c-1.283-.698-2.686.705-1.987 1.987l.169.311c.446.82.023 1.841-.872 2.105l-.34.1c-1.4.413-1.4 2.397 0 2.81l.34.1a1.464 1.464 0 0 1 .872 2.105l-.17.31c-.698 1.283.705 2.686 1.987 1.987l.311-.169a1.464 1.464 0 0 1 2.105.872l.1.34c.413 1.4 2.397 1.4 2.81 0l.1-.34a1.464 1.464 0 0 1 2.105-.872l.31.17c1.283.698 2.686-.705 1.987-1.987l-.169-.311a1.464 1.464 0 0 1 .872-2.105l.34-.1c1.4-.413 1.4-2.397 0-2.81l-.34-.1a1.464 1.464 0 0 1-.872-2.105l.17-.31c.698-1.283-.705-2.686-1.987-1.987l-.311.169a1.464 1.464 0 0 1-2.105-.872l-.1-.34zM8 10.93a2.929 2.929 0 1 0 0-5.86 2.929 2.929 0 0 0 0 5.858z"/>
              </svg>
          </nav>

         
        <div id="preview" class="container">
            
        </div>
</div>

<script>
    $(document).ready(function(){
      $("#blogHTML").change(function(){
        $("#preview").html(this.value);
      });

      $("#title").change(function(){
        $("#cardTitle").html(this.value);
      });

      $("#description").change(function(){
        $("#cardDescription").html(this.value);
      });

      $("#image").change(function(){
        $("#cardImage").attr("src", this.value);
      });
      $("#created").change(function(){
        $("#cardCreated").html(this.value);
      });

      $("#category").change(function(){
        $("#cardCategory").html(this.value);
      });

    });
    </script>

   
    
</div>


<%- include('./partials/footer') -%>